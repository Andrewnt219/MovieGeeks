{{#if movie}}
<article class="oneMovie">
    <img src="{{movie.poster_path}}" alt="{{movie.original_title}}" class="oneMovie__img">
    <p class="oneMovie__score"><span class="oneMovie__field">Score&nbsp;</span> {{movie.vote_average}}</p>
    <p class="oneMovie__genre"><span class="oneMovie__field">Genres&nbsp;</span> {{movie.genre}}</p>
    <p class="oneMovie__release"><span class="oneMovie__field">Release date&nbsp;</span> {{movie.release_date}}</p>
    <p class="oneMovie__price"><span class="oneMovie__field">Price&nbsp;</span> ${{movie.price}}</p>
    <p class="oneMovie__rent"><span class="oneMovie__field">Stock&nbsp;</span> {{movie.stock}}</p>
    <p class="oneMovie__desc"><span class="oneMovie__field">Overview&nbsp;</span> {{movie.overview}}</p>
    {{#if isAdmin}}
    <a class="oneMovie__btn-buy" href="/movies/edit/{{movie.id}}">Edit</a>
    <a class="oneMovie__btn-favorite" href="/movies/delete/{{movie.id}}?_method=DELETE">Delete</a>
    {{else}}
    <a class="oneMovie__btn-buy" href="/users/cart?_method=PUT&id={{movie.id}}">Add</a>
    <a class="oneMovie__btn-favorite" href="/users/wishlist?_method=PUT&id={{movie.id}}">Wishlist</a>
    {{/if}}
</article>
{{/if}}
